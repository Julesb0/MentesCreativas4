      "name": "Planetas - cat치logo",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status 200', function () { pm.response.to.have.status(200); });",
              "pm.test('tiempo de respuesta < 1500ms', function () { pm.expect(pm.response.responseTime).to.be.below(1500); });",
              "const body = pm.response.json();",
              "pm.test('estructura de planetas', function () {",
              "  pm.expect(body).to.have.property('planetas');",
              "  pm.expect(body.planetas.length).to.eql(8);",
              "});",
              "pm.test('cada planeta tiene nombre y radio', function () {",
              "  body.planetas.forEach((planet) => {",
              "    pm.expect(planet).to.have.property('nombre');",
              "    pm.expect(planet).to.have.property('radioKm');",
              "  });",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/planetas.json",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "planetas.json"
          ]
        }
      },
      "response": []
    },
